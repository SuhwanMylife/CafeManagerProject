<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Time_clicked"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="이름 : "
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text=" 이름 "
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="직책 : "
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text=" 직책 "
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_term"
            android:layout_marginLeft="55dp"
            android:text="@string/main_day" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pick_day"
            android:gravity="center"
            android:id="@+id/pick_term" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:background="@color/black">
            <TextView
                android:text="요일"
                android:padding="20dip"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />

            <TextView

                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="20dip"
                android:text="출근시간" />

            <TextView
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="20dip"
                android:text="퇴근시간" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="일"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start0"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end0"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="월"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start1"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end1"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="화"
                android:id="@+id/week2"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start2"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end2"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="수"
                android:id="@+id/week3"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start3"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end3"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="목"
                android:id="@+id/week4"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start4"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end4"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="금"
                android:id="@+id/week5"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start5"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end5"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>
        <TableRow
            android:background="@color/black">
            <TextView
                android:text="토"
                android:padding="20dip"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:background="@color/table_1col" />
            <TextView
                android:id="@+id/work_start6"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/work_end6"
                android:padding="20dip"
                android:layout_marginRight="1dp"
                android:background="@color/white" />
        </TableRow>

    </TableLayout>


</LinearLayout>