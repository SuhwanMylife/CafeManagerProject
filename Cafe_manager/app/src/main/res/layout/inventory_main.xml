<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_main_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="각 항목별로 입력 후 '입력' 버튼을 터치하세요." />

        <EditText
            android:id="@+id/editText_main_pdt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="물품명을 입력하세요."
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_main_pdt_classification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="분류를 입력하세요."
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_main_pdt_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="단위를 입력하세요."
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_main_pdt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="단가를 입력하세요."
            android:inputType="text" />

        <EditText
            android:id="@+id/editText_main_pdt_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="현재 재고를 입력하세요."
            android:inputType="text" />

        <Button
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="입력"
            android:id="@+id/button_main_insert" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="검색할 분류를 입력 후 검색 버튼을 터치하세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_main_search" />

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:layout_margin="2dp"
                android:hint = "분류를 입력하세요"
                android:inputType="text"
                android:id="@+id/editText_main_searchKeyword"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/button_main_search"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:text="검색" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/button_main_all"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="전체보기" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:id="@+id/listView_main_list" />


        <!--- 디버깅 용 -->
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="디버깅 용"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_main_debug" />

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/textView_main_result"
            android:scrollbars = "vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" />
    </LinearLayout>


</LinearLayout>