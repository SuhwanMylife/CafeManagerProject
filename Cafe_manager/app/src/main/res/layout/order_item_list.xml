<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <TextView
        android:id="@+id/textView_list_pdt_name"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView_list_pdt_classification"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView_list_pdt_unit"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView_list_pdt_price"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textView_list_pdt_stock"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/EditText_list_pdt_stock_num"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="1dp"
        android:gravity="center"/>
</LinearLayout>

</LinearLayout>